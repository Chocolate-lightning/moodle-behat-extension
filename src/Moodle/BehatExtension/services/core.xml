<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="behat.moodle.config_file_path"></parameter>
        <parameter key="gherkin.class">Moodle\BehatExtension\Gherkin\MoodleGherkin</parameter>
    </parameters>
    <services>

        <!-- Overwritting Gherkin service passing moodle config path -->
        <service id="gherkin" class="%gherkin.class%">
            <argument>%behat.moodle.config_file_path%</argument>
        </service>
    </services>
</container>